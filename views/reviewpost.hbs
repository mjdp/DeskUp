                    </div>
                </div>
                <div class="row mt-2 border-top">
                    <div class="col copyright">
                    <p class=""><small class="text-white-50">Â© 2020. All Rights Reserved.</small></p>
                    </div>
                </div>
            </div>
        </div>
    </body>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <script>

        // add comment  
        $(document).ready(function(){
            $("button.commentLoginbutton").click(function(){
                let name = $(this).attr('name')
                let obid =$(this).attr('ob-id')
                let comment = $(".commentNow").val()
                let title = $("#postTitle").val()
                let id = $("#postID").val()

                $('input.commentNow').val("")
                $.ajax({
                    url: "../comment",
                    method: "post",
                    data: {
                        id: id,
                        name: name,
                        obid: obid,
                        comment: comment,
                        title: title
                    },
                    success : function(c){
                        console.log("comment was: " + c)
                        if(c){
                            let parent = document.getElementById("parentContainer")
                            let divID = document.createElement("div")
                            let commentdiv = document.createElement("div")
                            let commentText = document.createElement("div")
                            let h5 = document.createElement("span")
                            let span1 = document.createElement("p")
                            let span2 = document.createElement("span")
                            let commentfooter = document.createElement("div")  
                            let date = c.date

                            let deleteButton = document.createElement("button")
                            let editButton = document.createElement("button")
                            let divider = document.createElement("div")

                            divID.setAttribute('data-id', c.newID)

                            divider.className = "divider"
                            
                            
                            deleteButton.setAttribute('type','button')
                            $(deleteButton).attr("id", "deleteButton")
                            deleteButton.setAttribute('title-id', title)
                            deleteButton.setAttribute('username',name)
                            deleteButton.setAttribute('ob-id', obid)
                            deleteButton.setAttribute('data-id',c.newID)
                            deleteButton.setAttribute('comment',comment)
                            deleteButton.className = "btn btn btn-outline-danger btn-sm float-right ml-2 deleteButton";

                            editButton.className = "btn btn-outline-dark btn-sm float-right ml-2"
                            editButton.setAttribute("type", "button")
                            $(editButton).attr("id", "editButton")
                            editButton.setAttribute('title-id', title)
                            editButton.setAttribute('username',name)
                            editButton.setAttribute('ob-id', obid)
                            editButton.setAttribute('data-id',c.newID)
                            editButton.setAttribute('comment',comment)
                            


                            commentdiv.className = "d-flex flex-row comment-row m-t-0 border-bottom"
                            commentText.className = "comment-text w-100"
                            h5.className = "commentusername"
                            span1.className = "text-muted float-right"
                            span2.className = "m-b-15 d-block commmentfield"
                            commentfooter.className = "comment-footer float-right"

                            h5.innerHTML = name
                            span1.innerHTML = c.date
                            span2.innerHTML = comment
                            editButton.innerHTML = "Edit"
                            deleteButton.innerHTML = "Delete"
                            
                            

                            commentText.appendChild(h5)
                            commentText.appendChild(span1)
                            commentText.appendChild(span2)
                            commentText.appendChild(deleteButton)
                            commentText.appendChild(editButton)

                            commentdiv.appendChild(commentText)

                            divID.appendChild(commentdiv)

                            parent.append(divID)
                            
                        }
                    }
                })

                
            })
            
            
        })

        //delete button comments
        $(document).ready(function(){
            $(document).on('click', '#deleteButton', function() {
                let id=$(this).attr("data-id")
                let userid = $(this).attr("ob-id")
                let username=$(this).attr("username")
                let title=$(this).attr("title-id")
                let comment=$(this).attr("comment")
                $.ajax({
                    url: "../delete-comment",
                    method: "post",
                    data: {
                        id: id,
                        userid: userid,
                        username: username,
                        title: title,
                        comment: comment
                    },
                    success : function(c){
                        console.log("Delete was: " + c)
                        if(c){
                            $("div[data-id="+id+"]").remove()
                        }
                    }
                })
            })
        })

        //edit button on comments
        $(document).ready(function(){
            $(document).on('click', '#editButton', function() {
                let id=$(this).attr("data-id")
                let userid = $(this).attr("ob-id")
                let username=$(this).attr("username")
                let title=$(this).attr("title-id")
                let comment=$(this).attr("comment")
                var parent = $(this).parent()

                let saveButton = document.createElement("button")
                saveButton.setAttribute('type','button')
                saveButton.setAttribute('id','saveButton')
                saveButton.setAttribute('title-id', title)
                saveButton.setAttribute('ob-id', userid)
                saveButton.setAttribute('username', username)
                saveButton.setAttribute('data-id',id)
                saveButton.setAttribute('comment',comment)
                saveButton.className = "btn btn btn-outline-success btn-sm float-right ml-2";
                saveButton.innerHTML = "Save"

                let newComment = $(parent).children('.commmentfield');

                $(newComment).attr('contenteditable', 'true') 
                $(newComment).addClass('editableBG')
                
                parent.append(saveButton)
            })
        })

        // save comment
        $(document).ready(function(){
            $(document).on('click', '#saveButton', function() {
                let id= $(this).attr("data-id")
                let username=$(this).attr("username")
                let userid = $(this).attr("ob-id")
                let title=$(this).attr("title-id")
                let comment=$(this).attr("comment")
                var parent = $(this).parent()

                let commentfield = $(parent).children('.commmentfield');
                let newComment = commentfield.text()
                console.log(newComment)
                
                $.ajax({
                    url: "../edit-comment",
                    method: "post",
                    data: {
                        id: id,
                        username: username,
                        userid: userid,
                        title: title,
                        comment: comment,
                        newComment: newComment
                    },
                    success : function(c){
                        console.log("edit was: " + c)
                        if(c){
                            $(commentfield).attr('contenteditable', 'false') 
                            $(commentfield).removeClass('editableBG')
                            $("#saveButton").remove()
                        }
                    }
                })
                
            })
        })

    </script>
</html>

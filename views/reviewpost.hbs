                {{else}}
                    <div class="btn-group">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="dropdownbg">
                            <i class="fas fa-user"></i>Account
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="/user/login" id="dropdowntext">Login</a>
                            <a class="dropdown-item" href="/user/register" id="dropdowntext">Register</a>
                        </div>
                    </div>
                {{/ifEquals}} {{/ifEquals}}
            </div>
        </nav>

        <div class="content" id="marginclass">
            <div class="container">
                {{#with review}}                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 
                <nav aria-label="breadcrumb" >
                    <ol class="breadcrumb" id="breadcrumbBG">
                        <li class="breadcrumb-item"><a href="/" id="breadcrumbItemColor">Home</a></li>
                        <li class="breadcrumb-item"><a href="/review" id="breadcrumbItemColor">Reviews</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
                    </ol>
                </nav>
                <div class="row" >
                    <div class="col-12 m-auto">
                        <img src="{{primaryImage}}" class="img-responsive reviewPostIMG">
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-8 m-auto">
                        <p class="articleTitle">{{title}}</p>
                        <p class="articleDetails">by {{author}}. {{date}}</p>
                    </div>

                    <div class="col-4 mt-2">
                        <div class="row">
                            <div class="col">
                                <span id="articleScore">DeskUP SCORE</span>
                            </div>
                            <div class="col">
                                <div class="progress" id="score" style="height: 20px;">
                                    <div class="progress-bar" role="progressbar" style="width: {{times score}}%" aria-valuenow="25" aria-valuemin="50" aria-valuemax="100" id="scoreValue">{{score}} </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-12 m-auto">
                        <div class="reviewText">{{content}}
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-6">
                        <p class="specificationsHeading">Specifications</p>
                        <ul class="speclist">
                            {{#each specs}}
                            <li class="specs reviewText">{{this}}</li>              
                            {{/each}}
                        </ul>
                    </div>

                    <div class="col-6 border-left reviewborderleft">
                        <img src="{{secondaryImage}}" class="img-responsive reviewPostIMG2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 m-auto border-bottom">
                        <p class="ArticleHeadings">The Good</p>
                            <div class="reviewText">{{pros}}
                            </div>                            
                    </div>
                    <div class="col-6 m-auto border-bottom">
                        <p class="ArticleHeadings">Not so Good</p>
                            <div class="reviewText">{{cons}}
                            </div>                   
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 m-auto border-bottom">
                        <p class="ArticleHeadings">Verdict</p>
                        <div class="reviewText">{{verdict}}
                        </div>
                    </div>
                </div>
            {{/with}}
            </div>
                <div class="container mb-5" id="parentContainer">
                    {{#if user.username}} 
                        <p class="comments">Comments</p>
                        {{!-- <form action="../comment" method="POST"> --}}
                            {{#with review}}
                                    <input type="hidden" value="{{_id}}" name="postID" id="postID">
                                    <input type="hidden" value="{{title}}" name="postTitle" id="postTitle">
                            {{/with}}
                            <div class="d-flex flex-row">
                                {{!-- <div class="p-2"><i class="fas fa-comment-alt fa-3x"></i></div> --}}
                                <input class="commentNow"  type="tex" id="comment" name="comment" placeholder="Write a comment..."></input>
                            </div> 
                            <div class="row d-flex justify-content-end">
                                <button type="submit" ob-id="{{user.id}}" name="{{user.username}}" class="commentLoginbutton">Comments</button>
                            </div>  
                        {{!-- </form>                                           --}}
                    {{else}}
                        <p class="comments">Comments</p>
                        <div class="d-flex flex-row">
                            {{!-- <div class="p-2"><i class="fas fa-comment-alt fa-3x"></i></div> --}}
                            <div class="commentNow">Login or Sign Up to leave a comment</div>
                        </div> 
                        <div class="row d-flex justify-content-end">
                            <div class="commentLoginbutton"><a href="/user/login" style="color: white; text-decoration: none">Login</a></div>
                            <div class="commentLoginbutton"><a href="/user/register" style="color: white; text-decoration: none">Sign Up</a></div>
                        </div>
                    {{/if}} 

                    {{#ifEquals user.role "admin"}}
                        {{#each review.comments}}
                        <div data-id={{_id}}>
                            <div class="d-flex flex-row comment-row m-t-0 border-bottom">
                                <div class="comment-text w-100">
                                    <span class="commentusername">{{username}}</span> 
                                    <p class="text-muted float-right">{{date}}</p>  
                                    <span class="m-b-15 d-block commmentfield">{{comment}}</span>
                                    {{#ifEquals ../user.username username}}                             
                                        <button type="button" id="deleteButton" title-id="{{../review.title}}" username="{{username}}" data-id={{_id}} comment="{{comment}}" class="btn btn btn-outline-danger btn-sm float-right ml-2 deleteButton">Delete</button>
                                        <button type="button" id="editButton" title-id="{{../review.title}}" username="{{username}}" data-id={{_id}} comment="{{comment}}" class="btn btn-outline-dark btn-sm float-right ml-2"> Edit</button> 
                                    {{else}}
                                        <button type="button" id="deleteButton" title-id="{{../review.title}}" username="{{username}}" data-id={{_id}} comment="{{comment}}" class="btn btn btn-outline-danger btn-sm float-right ml-2 deleteButton">Delete</button>
                                    {{/ifEquals}}                                        
                                </div>
                            </div> 
                        </div>
                        {{/each}}
                    {{else}} {{#ifEquals user.role "user"}}
                        {{#each review.comments}}
                        <div data-id={{_id}}>
                            <div class="d-flex flex-row comment-row m-t-0 border-bottom">
                                <div class="comment-text w-100">
                                    <h5 class="font-medium">{{username}}</h5> 
                                    <span class="text-muted float-right">{{date}}</span>  
                                    <span class="m-b-15 d-block commmentfield">{{comment}}</span>                                 
                                    {{#ifEquals ../user.username username}}                             
                                        <button type="button" id="deleteButton" title-id="{{../review.title}}" username="{{username}}" data-id={{_id}} comment="{{comment}}" class="btn btn btn-outline-danger btn-sm float-right ml-2 deleteButton">Delete</button>
                                        <button type="button" id="editButton" title-id="{{../review.title}}" username="{{username}}" data-id={{_id}} comment="{{comment}}" class="btn btn-outline-dark btn-sm float-right ml-2"> Edit</button> 
                                    {{/ifEquals}}
                                </div> 
                            </div>
                        </div>
                        {{/each}}
                    {{else}}
                        {{#each review.comments}}
                        <div data-id={{_id}}>
                            <div class="d-flex flex-row comment-row m-t-0 border-bottom">
                                <div class="comment-text w-100">
                                    <h5 class="font-medium">{{username}}</h5> <span class="text-muted float-right">{{date}}</span>  
                                    <span class="m-b-15 d-block">{{comment}}</span>
                                    <div class="comment-footer float-right">  
                                    </div>           
                                </div>
                            </div>
                        </div> 
                        {{/each}}
                    {{/ifEquals}} {{/ifEquals}}
                </div>
        </div> 
    </div>          
        <div class="mt-5 pt-4 pb-3 footer stickyFooter">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-xs-12 about-company">
                        <h2>About Us</h2>
                        <p class="pr-5 text-white-50">DeskUp is a product review website. It shares insight, inspiration and ideas about desk setups. 
                            Contains detailed guides and reviews of different products found on a desk setup</p>
                    <p>NPM Packages: Express, HBS, Express-Session, Body-parser, Mongoose, Bootsrap, Crypto, and Moment</p>
                    </div>
                    <div class="col-lg-2 col-xs-12 links">
                        {{!-- <h4 class="mt-lg-0 mt-sm-3">More</h4>
                        <ul class="m-0 p-0">
                            <li>- <a href="#">Community</a></li>
                            <li>- <a href="#">Contributors</a></li>

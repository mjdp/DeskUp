                {{#if error}}
                    <div class="error">{{error}}</div> <br>
                {{/if}}
                <form action="login" method="POST">
                    <div class="form-group">
                        <label for="email">Username</label>
                        <input type="text" id="un" name="un" class="form-control" placeholder="Enter Username"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="pw" name="pw" class="form-control" placeholder="Enter Password"/>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block" id="logregButton">Login</button>
                </form>
                <p class="lead mt-3">
                    Don't have an account yet?  <a href="register" >Register</a>
